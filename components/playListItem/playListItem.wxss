.playListItem .album {
  position: relative;
  border-radius: 7px;
  overflow: hidden;
}

.playListItem .count {
  position: absolute;
  right: 0px;
  bottom: 0px;
  padding: 2px 5px;
  border-radius: 3px;
  background-color: rgba(0, 0, 0, .4);
  color: #fff;
  font-size: 11px;
}

.playListItem .album .image {
  width: 100%;
  /* height: 115px; */
  vertical-align: top;
}

.playListItem .content {
  margin-top: 3px;
  font-size: 13px;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}