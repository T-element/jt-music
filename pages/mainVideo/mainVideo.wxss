/* pages/mainVideo/mainVideo.wxss */

.videoList {
  display: flex;
  flex-wrap: wrap;
  padding: 0 4px;
}

.container {
  width: 50%;
  padding-bottom: 15px;
}

.item {
  margin: 0 4px;
}

.album {
  position: relative;
}

.image {
  width: 100%;
  height: 100px !important;
  border-radius: 6px;
}

.info {
  position: absolute;
  left: 5px;
  right: 5px;
  bottom: 7px;
  display: flex;
  justify-content: space-between;
  color: white;
  font-size: 12px;
}

.info .icon {
  width: 15px;
  height: 12px;
  margin-right: 3px;
  vertical-align: -1px;
}

.content {
  font-size: 14px;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
